from datetime import date, time
from typing import List, Optional

class Schedule:
    def __init__(self, scheduleID: str, managerID: str, startDate: date, endDate: date):
        self.scheduleID = scheduleID
        self.employeeID = employeeID
        self.startDate = startDate
        self.endDate = endDate
        self.shifts: List['Shift'] = []

    def addShift(self, shift: 'Shift'):
        self.shifts.append(shift)

    def editSchedule(self, startDate: Optional[date] = None, endDate: Optional[date] = None):
        if startDate is not None:
            self.startDate = startDate
        if endDate is not None:
            self.endDate = endDate

    def deleteShift(self, employeeID: str, shiftDate: date):
        keepShifts = []

        for shift in self.shifts:
            if not (shift.employeeID == employeeID and shift.shiftDate == shiftDate):
                keepShifts.append(shift)
        self.shifts = keepShifts

class Shift:
    def __init__(self, employeeID: str, shiftDate: date, startTime: time, endTime: Time):
        self.employeeID = employeeID
        self.shiftDate = shiftDate
        self.startTime = startTime
        self.endTime = endTime

    def editShift(self, employeeID: Optional[str] = None, startDate: Optional[date] = None, endDate: Optional[date] = None):
        if employeeID is not None:
            self.employeeID = employeeID
        if startDate is not None:
            self.startDate = startDate
        if endDate is not None:
            self.endDate = endDate