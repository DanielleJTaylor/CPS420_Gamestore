from datetime import date
from typing import Optional

class Employee:

    def __init__(self, employeeID: str, fname: str, MI: str, lname: str, password: str, address: str, 
    phoneNo: str, email: str, hireDate: Optional[date] = None, manager: bool = False, promoteDate: Optional[date] = None):
        self.employeeID = employeeID
        self.fname = fname
        self.MI = MI
        self.lname = lname
        self.password = password
        self.address = address
        self.phoneNo = phoneNo
        self.email = email
        self.hireDate = hireDate or date.today()
        self.manager = manager
        self.promoteDate = promoteDate

    def editAccountDetails(self, fname: Optional[str] = None, MI: Optional[str] = None, lname: Optional[str] = None, 
                        password: Optional[str] = None, address: Optional[str] = None, phoneNo: Optional[str] = None, 
                        email: Optional[str] = None):
        if fname is not None:
            self.fname = fname
        if MI is not None:
            self.MI = MI
        if lname is not None:
            self.lname = lname
        if password is not None:
            self.password = password
        if address is not None:
            self.address = address
        if phoneNo is not None:
            self.phoneNo = phoneNo
        if email is not None:
            self.email = email

    def promote(self, promoteDate: date):
        self.manager = True
        self.promoteDate = promoteDate

    def confirmPassword(self, confirmPassword: str) -> bool:
        return self.password == confirmPassword